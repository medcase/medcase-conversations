{
	"type": "module",
	"compilerOptions": {
	  "target": "ES6",
	  "lib": ["es5", "es2015", "es2016", "esnext", "DOM"],
	  "declaration": true,
	  "allowSyntheticDefaultImports": true,
	  "forceConsistentCasingInFileNames": true,
	  "sourceMap": true,
	  "outDir": "dist",
	  "allowJs": true,
	  "noEmit": false,
	  "esModuleInterop": true,
	  "importHelpers": true,
	  "moduleResolution": "nodenext"
	},
  
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }
  